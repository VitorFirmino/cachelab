# Public app URLs
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Supabase (client + functions invocation)
# Required: URL + at least one key (publishable or anon).
NEXT_PUBLIC_SUPABASE_URL="https://<project-ref>.supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY="<sb_publishable_...>"
# Optional (some setups use anon key for functions; keep only one if you prefer).
NEXT_PUBLIC_SUPABASE_ANON_KEY="<eyJ...>"

# Server-side Supabase (optional but recommended for admin/server flows)
SUPABASE_SERVICE_ROLE_KEY="<service-role-key>"
# Alternative fallback key for server-side invocation (optional)
SUPABASE_ANON_KEY="<anon-key>"

# Admin access allowlist + credentials (used by Playwright tests)
ADMIN_EMAILS="admin@example.com"
ADMIN_PASSWORD="change-me"

# Prisma migrations (Prisma CLI)
# DATABASE_URL is required by Prisma; for Supabase it's common to use the "direct connection" (port 5432).
DATABASE_URL="postgresql://postgres.<project-ref>:<db-password>@db.<project-ref>.supabase.co:5432/postgres?sslmode=require"
# Optional: prefer a direct connection specifically for migrations/db push (overrides DATABASE_URL).
DATABASE_URL_DIRECT="postgresql://postgres.<project-ref>:<db-password>@db.<project-ref>.supabase.co:5432/postgres?sslmode=require"

# Runtime DB connection (Prisma adapter + pooler by default)
DB_HOST="aws-0-us-west-2.pooler.supabase.com"
DB_PORT="6543"
DB_USER="postgres.<project-ref>"
DB_PASSWORD="<db-password>"
DB_NAME="postgres"

