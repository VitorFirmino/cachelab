generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Product {
  id         Int       @id @default(autoincrement())
  name       String
  price      Float
  stock      Int
  updatedAt  DateTime  @updatedAt
  categoryId Int?
  events     Event[]
  category   Category? @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@index([updatedAt])
}

model Event {
  id        Int      @id @default(autoincrement())
  type      String
  message   String
  productId Int?
  createdAt DateTime @default(now())
  product   Product? @relation(fields: [productId], references: [id])

  @@index([createdAt])
  @@index([productId])
}

model CacheConfig {
  id         String   @id
  label      String
  stale      Int
  revalidate Int
  expire     Int
  updatedAt  DateTime @updatedAt
}
